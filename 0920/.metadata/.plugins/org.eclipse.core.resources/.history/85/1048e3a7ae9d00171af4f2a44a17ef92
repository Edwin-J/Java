
public class DanTalk {

	private Mark[] array;
	private int index;
		
	public DanTalk(int size) {
		array = new Student[size];
		index = 0;
		System.out.println("단톡방 생성");
	}
	
	public void enter (Object person) {
		if (person instanceof Mark) {
			array[index] = (Mark) person;
			index ++;
			System.out.println(person + ": 입장");
		} else {
			System.out.println(person + ": 입장 불가");
		}
	}

}
